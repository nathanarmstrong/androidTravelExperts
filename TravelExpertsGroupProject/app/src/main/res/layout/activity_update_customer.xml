<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvUpdatePageHeader"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="444dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvUpdatePageHeader">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateFirstName"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="First Name"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateLastName"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="last Name"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateAddress"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Address"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateCity"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="City"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateCity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateProvince"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Provence"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateProvince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdatePost"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Postal Code"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdatePost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateCountry"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Country"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateCountry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateHomePhone"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Home Phone"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateHomePhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateBuisPhone"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Buisness Phone"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateBuisPhone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvUpdateEmail"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Email"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etUpdateEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tvUpdateProvince"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnUpdateCustInfo"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="8dp"
                android:padding="5dp"
                android:text="update"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnUpdateCustInfo">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvChangePass"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Password"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etChangePass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvChangePassConfirm"
                        android:layout_width="178dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Confirm password"
                        app:layout_constraintStart_toStartOf="parent"
                        tools:layout_editor_absoluteY="66dp" />

                    <EditText
                        android:id="@+id/etChangePassConfirm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:ems="10"
                        android:inputType="textPassword"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        tools:layout_editor_absoluteY="52dp" />
                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/btnChangePass"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:enabled="false"
                android:text="Change Password"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>